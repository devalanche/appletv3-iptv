<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="https://appletv.redbull.tv/assets/application.js" />
  </head>
  <body>
    <scroller id="appletv3-iptv.category">
      <header>
        <simpleHeader
            accessibilityLabel="{{ .Name}}"
            horizontalAlignment="right">
          <title>{{ .Name}}</title>
        </simpleHeader>
      </header>
      <items>
        <grid id="grid_0">
          <items>
            {{ range $key, $value := .Channels }}
            <moviePoster
                id="grid_item_14"
                accessibilityLabel="Movie 14"
                onSelect="atvutils.loadURL('https://appletv.redbull.tv/player.xml?category={{ $.ID }}&amp;channel={{ $value.ID }}');"
                onPlay="atvutils.loadURL('https://appletv.redbull.tv/player.xml?category={{ $.ID }}&amp;channel={{ $value.ID }}');">
              <title>{{ $value.Title }}</title>
              <image
                  src720="{{ $value.Logo }}"
                  src1080="{{ $value.Logo }}" />
              <defaultImage>resource://Poster.png</defaultImage>
            </moviePoster>
            {{ end }}
          </items>
        </grid>
      </items>
    </scroller>
  </body>
</atv>