{{ define "body" -}}
<scroller id="{{ .BodyID }}">
  <header>
    <simpleHeader
        accessibilityLabel="{{ .Data.Name }}"
        horizontalAlignment="right">
      <title>{{ .Data.Name }}</title>
    </simpleHeader>
  </header>
  <items>
    <grid
        id="{{ .BodyID }}-grid"
        columnCount="5">
      <items>
        {{ range $key, $value := .Data.Channels }}
        <sixteenByNinePoster
            id="{{ $value.ID }}"
            accessibilityLabel="{{ $value.Title }}"
            alwaysShowTitles="true"
            onSelect="atvutils.loadURL('{{ $.BasePath }}/player.xml?category={{ $value.Category }}&amp;channel={{ $value.ID }}');"
            onPlay="atvutils.loadURL('{{ $.BasePath }}/player.xml?category={{ $value.Category }}&amp;channel={{ $value.ID }}');">
          <title>{{ $value.Title }}</title>
          <!-- <subtitle>Subtitle</subtitle> -->
          <image
              src720="{{ $value.Logo }}"
              src1080="{{ $value.Logo }}" />
          <defaultImage>resource://16x9.png</defaultImage>
        </sixteenByNinePoster>
        {{- end }}
      </items>
    </grid>
  </items>
</scroller>
{{- end }}