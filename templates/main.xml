{{ define "body" -}}
<viewWithNavigationBar
    id="{{ .BodyID }}"
    onNavigate="handleNavbarNavigate( event )">
  <navigation currentIndex="0">
    <navigationItem id="recent">
      <title>{{ index .Translations "main.recent" }}</title>
      <url>{{ .BasePath }}/recent.xml</url>
    </navigationItem>
    <navigationItem id="search">
      <title>{{ index .Translations "main.search" }}</title>
      <url>{{ .BasePath }}/search.xml</url>
    </navigationItem>
    {{ range $key, $value := .Data.Categories }}
    <navigationItem id="{{ $key }}">
      <title>{{ $value.Name }}</title>
      <url>{{ $.BasePath }}/category.xml?category={{ $key }}</url>
    </navigationItem>
    {{- end }}
    <navigationItem id="settings">
      <title>{{ index .Translations "main.settings" }}</title>
      <url>{{ .BasePath }}/settings.xml</url>
    </navigationItem>
  </navigation>
</viewWithNavigationBar>
{{- end }}